<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Properties>
<Property name="log-path">D:/log1Controller/</Property>
</Properties>
<Appenders>
<!--  console appender  -->
<Console name="console-log" target="SYSTEM_OUT">
<PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n"/>
</Console>
<!--  file appender  -->
<RollingFile name="trace" fileName="${log-path}/trace.log" filePattern="${log-path}/trace-%d{yyyy-MM-dd-HH}.log">
<!--  log pattern  -->
<PatternLayout>
<pattern>%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n</pattern>
</PatternLayout>
<!--  set file size policy  -->
<Policies>
<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
<!--  <SizeBasedTriggeringPolicy size="10 MB" />  -->
</Policies>
<DefaultRolloverStrategy max="500"/>
</RollingFile>
<RollingFile name="report" fileName="${log-path}/trace.log" filePattern="${log-path}/trace-%d{yyyy-MM-dd-HH}.log">
<!--  log pattern  -->
<PatternLayout>
<pattern>%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n</pattern>
</PatternLayout>
<!--  set file size policy  -->
<Policies>
<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
<!--  <SizeBasedTriggeringPolicy size="10 MB" />  -->
</Policies>
<DefaultRolloverStrategy max="500"/>
</RollingFile>
<!--  file appender  -->
<RollingFile name="Log1" fileName="${log-path}/Log1.log" filePattern="${log-path}/Log1-%d{yyyy-MM-dd-HH}.log">
<!--  log pattern  -->
<PatternLayout>
<pattern>%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n</pattern>
</PatternLayout>
<!--  set file size policy  -->
<Policies>
<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
<!--  <SizeBasedTriggeringPolicy size="10 MB" />  -->
</Policies>
<DefaultRolloverStrategy max="2500"/>
</RollingFile>


<!--  file appender  -->
<RollingFile name="Log2" fileName="${log-path}/Log2.log" filePattern="${log-path}/Log2-%d{yyyy-MM-dd-HH}.log">
<!--  log pattern  -->
<PatternLayout>
<pattern>%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n</pattern>
</PatternLayout>
<!--  set file size policy  -->
<Policies>
<!--  TimeBasedTriggeringPolicy interval="1" modulate="true"/>-->
  <SizeBasedTriggeringPolicy size="1 KB" />  
</Policies>
<DefaultRolloverStrategy max="2500"/>
</RollingFile>



</Appenders>
<Loggers>
<Logger name="Dialog.Designer.TraceWriter" level="debug" additivity="false">
<appender-ref ref="trace"/>
>
<!-- 	    <appender-ref ref="console-log"/> -->
</Logger>


<Logger name="Log1" level="debug" additivity="false">
<appender-ref ref="Log1"/>
<appender-ref ref="console-log"/>
</Logger>

<Logger name="Log2" level="debug" additivity="false">
<appender-ref ref="Log2"/>
<appender-ref ref="console-log"/>
</Logger>


<Logger name="Dialog.Designer.ReportWriter" level="debug" additivity="false">
<appender-ref ref="report"/>
<!-- 	    <appender-ref ref="console-log"/> -->
</Logger>
<Root level="debug" additivity="false">
<!--         <AppenderRef ref="console-log"/> -->
</Root>
</Loggers>





</Configuration>